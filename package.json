{
  "name": "xpm",
  "version": "0.8.0",
  "description": "The xPack package manager command line tool",
  "main": "./index.js",
  "directories": {
    "bin": "./bin",
    "lib": "./lib",
    "test": "./test"
  },
  "bin": {
    "xpm": "./bin/xpm.js"
  },
  "scripts": {
    "prepublishOnly": "standard && npm run test-tap -s",
    "test": "standard && npm run test-tap -s",
    "test-coverage": "tap --coverage --reporter=classic --timeout 600 --no-color \"test/tap/*.js\"",
    "test-tap": "tap --reporter=classic --timeout 300 --no-color \"test/tap/*.js\"",
    "tap": "tap --reporter=spec --timeout 300 --no-color",
    "fix": "standard --fix",
    "link": "npm link @ilg/cli-start-options; npm link @xpack/es6-promisifier",
    "git-log": "git log --pretty='%cd * %h %s' --date=short"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpack/xpm-js.git"
  },
  "keywords": [
    "xpack",
    "package",
    "manager",
    "npm"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-u/"
  },
  "contributors": [],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpack/xpm-js/issues/"
  },
  "homepage": "https://xpack.github.io/xpm/",
  "dependencies": {
    "@ilg/cli-start-options": "^0.4.13",
    "@xpack/es6-promisifier": "^1.0.1",
    "cacache": "^15.0.5",
    "cp-file": "^9.0.0",
    "decompress": "^4.2.1",
    "del": "^6.0.0",
    "is-windows": "^1.0.2",
    "liquidjs": "^9.20.1",
    "make-dir": "^3.1.0",
    "mz": "^2.7.0",
    "node-fetch": "^2.6.1",
    "pacote": "^11.2.3",
    "parse-git-config": "^3.0.0",
    "semver": "^7.3.4",
    "tar": "^6.1.0",
    "user-home": "^2.0.0"
  },
  "devDependencies": {
    "standard": "^16.0.3",
    "tap": "^14.11.0"
  },
  "peerDependencies": {},
  "bundledDependencies": [],
  "optionalDependencies": {}
}
